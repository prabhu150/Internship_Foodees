extends ./includes/layout
block main
	body
		.container
			.row.jumbotron.text-center#heading
				h2 Profile Details
				p [Top Secret] 
			.row
				.col-md-4.text-center#profilepic
					img(src= user.profile.picture alt='')
					hr
					
					span.glyphicon.glyphicon-time.profile-icon(aria-hidden='true')
					font Joined on !{user.profile.time}
					hr

				.col-md-8#details
					h4 Personal Details
					ul
						li Name: 
							font #{user.profile.name}
						li Gender: 
							font #{user.profile.gender}
						li Email:
							font  #{user.email}
						li Type : 
							font #{user.type}
				
					h4 Recent Orders Placed
					.list-group
							button.list-group-item(type='button')
							button.list-group-item(type='button')
							button.list-group-item(type='button')
							button.list-group-item(type='button')
							button.list-group-item(type='button')
							button.list-group-item(type='button')
							button.list-group-item(type='button')
							button.list-group-item(type='button')

		.container
			.row.text-center
				if (user.type=='Customer')
					.row.text-center
						.col-md-10.col-md-offset-1
							font Your #{user.tiffinstatus}

	script(type="text/javascript",src="vendor/pace/pace.js")
					