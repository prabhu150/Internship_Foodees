extends ./includes/layout
block main
  .wrapper#index
      .container
          h1.text-center Welcome
          form.form.text-center(action="/signin" method="post")
            input(type='email', placeholder='Email', name='email')
            input(type='password', placeholder='Password', name='password')
            button.btn#login-button(type='submit') Login
            br
            a.btn(href='/signup')#signup Sign-Up
            a.col-md-4.col-md-offset-4.btn.btn(href='/auth/facebook')#fb 
              .login-icon
                |&nbspLogin with Facebook &nbsp
                i.fab.fa-facebook
            br
            br
            a.col-md-4.col-md-offset-4.btn(href='/auth/google')#gp 
              .login-icon
                |&nbspLogin with Google+ &nbsp
                i.fab.fa-google-plus
        ul.bg-bubbles
          li
          li
          li
          li
          li
          li
          li
          li
          li
          li


